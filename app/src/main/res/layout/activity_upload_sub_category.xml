<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadSubCategoryActivity">

    <EditText
        android:id="@+id/editCategorySubName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:textSize="25sp"
        android:inputType="text"
        android:autofillHints="name"
        android:hint="@string/name_subcategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUploadCategory"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"

        android:text="@string/name_upload"
        app:layout_constraintEnd_toEndOf="@+id/editCategorySubName"
        app:layout_constraintTop_toBottomOf="@+id/editCategorySubName" />
</androidx.constraintlayout.widget.ConstraintLayout>